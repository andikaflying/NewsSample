<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/NewsFragment">

    <fragment
        android:id="@+id/NewsFragment"
        android:name="app.andika.newssample.ui.NewsFragment"
        android:label="@string/news_fragment_label"
        tools:layout="@layout/fragment_news">

        <action
            android:id="@+id/action_NewsFragment_to_NewsDetailFragment"
            app:destination="@id/NewsDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/NewsDetailFragment"
        android:name="app.andika.newssample.ui.NewsDetailFragment"
        android:label="@string/news_detail_fragment_label"
        tools:layout="@layout/fragment_news_detail">

        <argument
            android:name="selectedArticle"
            app:argType="app.andika.newssample.model.Article" />
    </fragment>
</navigation>